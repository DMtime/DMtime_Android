<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/post_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/post_writer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_title_tv" />


    <TextView
        android:id="@+id/post_writer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/post_writer_tv"
        app:layout_constraintTop_toTopOf="@+id/post_writer_tv" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorLightGray"
        app:layout_constraintBottom_toBottomOf="@+id/post_writer_name_tv"
        app:layout_constraintStart_toEndOf="@+id/post_writer_name_tv"
        app:layout_constraintTop_toTopOf="@+id/post_writer_name_tv" />

    <TextView
        android:id="@+id/post_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_writer_name_tv"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/post_writer_name_tv" />

    <TextView
        android:id="@+id/post_date_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_date_tv"
        app:layout_constraintStart_toEndOf="@+id/post_date_tv"
        app:layout_constraintTop_toTopOf="@+id/post_date_tv" />

    <TextView
        android:id="@+id/post_recommendation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="8sp"

        app:layout_constraintBottom_toBottomOf="@+id/post_date_tv"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/post_date_tv" />

    <TextView
        android:id="@+id/post_recommendation_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_recommendation_tv"
        app:layout_constraintStart_toEndOf="@+id/post_recommendation_tv"
        app:layout_constraintTop_toTopOf="@+id/post_recommendation_tv" />

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorLightGray"
        app:layout_constraintBottom_toBottomOf="@+id/post_writer_name_tv"
        app:layout_constraintStart_toEndOf="@+id/post_date_detail_tv"
        app:layout_constraintTop_toTopOf="@+id/post_writer_name_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@color/gray_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_recommendation_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>